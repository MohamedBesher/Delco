@model Saned.Delco.Admin.Models.PassengerNumberViewModel

@{
    ViewBag.Title = "اضافة عدد الركاب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="card-box">



            <h4 class="header-title m-t-0 m-b-30">اضافة عدد الركاب</h4>

            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("Add", "PassengerNumbers", FormMethod.Post, new { @class = "form-horizontal" }))
                    {


                        <div class="form-group">
                            @Html.LabelFor(model => model.Value, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Value, new { @class = "form-control", @type ="number" })
                             
                                @Html.ValidationMessageFor(model => model.Value, null, new {@class = "text-danger"})


                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })


                            </div>
                        </div>

                        <button type="submit" class="btn btn-purple waves-effect waves-light">حفظ</button>



                    }

                </div><!-- end col -->



            </div><!-- end row -->
        </div>
    </div><!-- end col -->
</div>

@Scripts.Render("~/bundles/jqueryval")
