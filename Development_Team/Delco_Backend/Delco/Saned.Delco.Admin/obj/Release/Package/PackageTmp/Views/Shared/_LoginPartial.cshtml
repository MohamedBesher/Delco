@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <!-- User -->
    <div class="user-box">
        <div class="user-img">
            <img src="/assets/images/users/dummy.jpg" alt="user-img" title="Mat Helme" class="img-circle img-thumbnail img-responsive">
            <div class="user-status offline"><i class="zmdi zmdi-dot-circle"></i></div>
        </div>
        <h5>مرحبا  @User.Identity.GetUserName()  </h5>
        <ul class="list-inline">
            <li>
                <a href="@Url.Action("ChangePassword", "Manage")">
                    <i class="fa fa-key"></i>
                </a>
            </li>

            <li>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="zmdi zmdi-power"></i></a>


                }
            </li>
        </ul>
    </div>
    <!-- End User -->
}